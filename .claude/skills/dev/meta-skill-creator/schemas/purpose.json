{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Purpose Definition",
  "description": "スキルの目的定義スキーマ",
  "type": "object",
  "required": ["skillName", "summary", "goals"],
  "properties": {
    "skillName": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "maxLength": 64,
      "description": "ハイフンケースのスキル名"
    },
    "summary": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "スキルの概要（1-2文）"
    },
    "goals": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "string",
        "minLength": 5
      },
      "description": "達成すべき目標のリスト"
    }
  },
  "additionalProperties": false
}
