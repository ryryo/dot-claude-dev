{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Update Plan",
  "description": "スキル更新計画スキーマ",
  "type": "object",
  "required": ["skillName", "skillPath", "updatePurpose", "updates"],
  "properties": {
    "skillName": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "maxLength": 64,
      "description": "スキル名"
    },
    "skillPath": {
      "type": "string",
      "description": "スキルディレクトリのパス"
    },
    "updatePurpose": {
      "type": "string",
      "minLength": 10,
      "description": "更新目的"
    },
    "updates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["order", "file", "category", "description"],
        "properties": {
          "order": {
            "type": "integer",
            "minimum": 1,
            "description": "更新順序"
          },
          "file": {
            "type": "string",
            "description": "対象ファイルパス（スキルディレクトリからの相対パス）"
          },
          "category": {
            "type": "string",
            "enum": ["add", "modify", "delete", "rename"],
            "description": "更新カテゴリ"
          },
          "description": {
            "type": "string",
            "minLength": 5,
            "description": "変更内容の説明"
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "依存するファイル"
          },
          "content": {
            "type": "string",
            "description": "変更後の内容（add/modifyの場合）"
          },
          "newFile": {
            "type": "string",
            "description": "リネーム先のファイルパス（renameの場合）"
          },
          "validation": {
            "type": "string",
            "description": "検証コマンド"
          }
        },
        "additionalProperties": false
      }
    },
    "rollbackSteps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "ロールバック手順"
    }
  },
  "additionalProperties": false
}
